<% content_for :body_class, 'bg-light' %>

<section class="section crossbow-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @crossbow.title %></h1>

      <ul class="pv1">
        <% if @crossbow.brand? %>
        <li class="inline-block pr3"><%= @crossbow.brand %></li>
        <% end %>

        <li class="inline-block pr3"><%= @crossbow.model %></li>

        <% if @crossbow.condition? %>
        <li class="inline-block pr3"><%= @crossbow.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
	<% if @crossbow.image_url %>
        <%= image_tag(@crossbow.image_url(:default)) %>
        <% end %> 
     </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @crossbow.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @crossbow.condition %>
        <tr>
          <td class="has-text-weight-bold">Condition:</td>
          <td><%= @crossbow.condition %></td>
        </tr>
        <% end %>

        <% if @crossbow.brand %>
          <tr>
            <td class="has-text-weight-bold">Brand:</td>
            <td><%= @crossbow.brand %></td>
          </tr>
        <% end %>

        <tr>
          <td class="has-text-weight-bold">Model:</td>
          <td><%= @crossbow.model %></td>
        </tr>
        <% if crossbow_author(@crossbow) %>
          <tr>
            <td class="has-text-weight-bold">Secret:</td>
            <td><%= @crossbow.secret %></td>
          </tr>
        <% end %>

      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@crossbow.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @crossbow.user.name %></p>
        <%= button_to 'Add to cart', line_items_path(crossbow_id: @crossbow), class: 'button is-info add-to-cart' %>
      </div>
    </div>
  </div>

  <% if crossbow_author(@crossbow) %>
    <%= link_to 'Edit', edit_crossbow_path(@crossbow), class: 'button' %>
  <% end %>
</section>
